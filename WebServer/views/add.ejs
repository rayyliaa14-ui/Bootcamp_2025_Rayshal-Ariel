<div class="add-container">
  <div class="form-container">
    <div class="regis-form">
      <img src="/image/registpfp.png" alt="regpfp">
      <p>add new contact!</p>
    </div>
    <div class="regis-input">
      <input type="text" placeholder="Fullname" class="reg-input"><br>
      <input type="email" placeholder="Email" class="reg-input"><br>
      <input type="text" id="phone" placeholder="Mobile number" class="reg-input" pattern="[0-9]{10,15}"><br>
      <input type="submit" class="button">
    </div>
  </div>
</div>

<script>
  const phoneInput = document.getElementById('phone'); //id = phone
    phoneInput.addEventListener('input',  (obj) => {
    obj.target.value = obj.target.value.replace(/[^0-9]/g, ''); 
  });
</script>